    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/.debug/__debug_bin.exe",
            "args": [],
            "env": {
                // Add overrides if you parameterize DB via env
                // "DB_TIMEZONE": "+00:00"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Launch API (race)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/.debug/__debug_bin_race.exe",
            "args": [],
            "env": {},
            "buildFlags": "-race",
            "console": "integratedTerminal"
        }
    ]
}
